<?xml version="1.0" encoding="UTF-8"?>
<metamorph xmlns="http://www.culturegraph.org/metamorph"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1">
	<meta>
		<name>ive1</name>
		<annotation>Matching for independent works based on ISBN, edition, and if present, volume</annotation>
	</meta>
	<rules>

		<combine name="key" value="${isbn}-${volume}-${edition}"
			reset="false">
			<choose name="volume">
				<data source="dcterms:volume">
					<regexp match="\d+" />
				</data>
				<data source="_id">
					<constant value="X" />
				</data>
			</choose>
			<choose name="edition">
				<data source="cg:edition">
					<regexp match="\d+" />
				</data>
				<data source="cg:edition">
					<replace pattern="[, \-\.;\)\(\]\[ @!?/\\]" with="" />
					<case to="lower" />
					<trim />
					<substring end="8" />
				</data>
				<data source="_id">
					<constant value="X" />
				</data>
			</choose>
			<data name="isbn" source="bibo:isbn13">
				<buffer />
			</data>
		</combine>
	</rules>
</metamorph>